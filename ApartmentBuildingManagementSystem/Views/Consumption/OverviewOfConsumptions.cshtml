@model IEnumerable<ApartmentBuildingManagementSystem.Models.ConsumptionDetails>

@{
    ViewBag.Title = "OverviewOfConsumptions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of consumptions</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ConsumptionType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Consumption)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ConsumptionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Consumption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditConsumption", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Create New", "UploadConsumption")
</p>